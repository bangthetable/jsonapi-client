{
  "name": "jsonapi-client",
  "version": "3.0.2",
  "main": "dist/model.js",
  "types": "dist/model.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "eslint **/*.ts --fix",
    "test": "eslint **/*.ts && jest && yarn build && bundlesize",
    "prepare": "yarn build"
  },
  "author": "Bang The Table",
  "license": "ISC",
  "description": "A convenient module to consume a jsonapi service",
  "dependencies": {
    "isomorphic-fetch": "^2.2.1",
    "jsonapi-serializer": "git+https://github.com/itsfadnis/jsonapi-serializer.git"
  },
  "devDependencies": {
    "@types/jest": "^25.2.1",
    "@types/jsonapi-serializer": "^3.6.3",
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "bundlesize": "^0.18.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.2.3",
    "jest": "^25.2.7",
    "nock": "^12.0.3",
    "prettier": "^2.0.4",
    "ts-jest": "^25.3.1",
    "typescript": "^3.8.3"
  },
  "bundlesize": [
    {
      "path": "./dist/model.js",
      "maxSize": "13 kB",
      "compression": "none"
    },
    {
      "path": "./dist/http-adapter.js",
      "maxSize": "3.5 kB",
      "compression": "none"
    },
    {
      "path": "./dist/jsonapi-error.js",
      "maxSize": "3.5 kB",
      "compression": "none"
    }
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/itsfadnis/jsonapi-client.git"
  },
  "jest": {
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.test.json"
      }
    },
    "collectCoverage": true,
    "verbose": true,
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    },
    "moduleNameMapper": {
      "jsonapi-serializer/lib/serializer": "<rootDir>/test/__mocks__/serializer.ts",
      "jsonapi-serializer/lib/deserializer": "<rootDir>/test/__mocks__/deserializer.ts"
    },
    "transform": {
      ".ts": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
